<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.tamk0002" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>giftR - tamk0002</name>
    <description>
        MAD9022 Midterm - GIFTR
        March 31st 2017
        Christine Tamkican
    </description>
    <author email="tamk0002@algonquinlive.com" href="http://cordova.io">
        Christine Tamican
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplshScreenDelay" value="5000"/>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <splash density="port-mdpi" src="res/screen/giftr splashscreens_pMDPI.png"/>
        <splash density="port-hdpi" src="res/screen/giftr splashscreens_pHDPI.png"/>
        <splash density="port-xhdpi" src="res/screen/giftr splashscreens_pXHDPI.png"/>
        <splash density="port-xxhdpi" src="res/screen/giftr splashscreens_pXXHDPI.png"/>
        <splash density="port-xxxhdpi" src="res/screen/giftr splashscreens_pXXXHDPI.png"/>
        <splash density="land-mdpi" src="res/screen/giftr splashscreens_lsMDPI.png"/>
        <splash density="land-hdpi" src="res/screen/giftr splashscreens_lsHDPI.png"/>
        <splash density="land-xhdpi" src="res/screen/giftr splashscreens_lsXHDPI.png"/>
        <splash density="land-xxhdpi" src="res/screen/giftr splashscreens_lsXXHDPI.png"/>
        <splash density="land-xxxhdpi" src="res/screen/giftr splashscreens_lsXXXHDPI.png"/>
        
        <icon density="mdpi" src="res/icons/giftr icons_MDPI.png"/>
        <icon density="hdpi" src="res/icons/giftr icons_HDPI.png"/>
        <icon density="xhdpi" src="res/icons/giftr icons_XHDPI.png"/>
        <icon density="xxhdpi" src="res/icons/giftr icons_XXHDPI.png"/>
        <icon density="xxxhdpi" src="res/icons/giftr icons_XXXHDPI.png"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
